{
  "name": "bearlink-desktop",
  "version": "1.0.3",
  "description": "BearLink Desktop App using Electron",
  "main": "main.js",
  "author": "BearLink",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.bearlink.desktop",
    "productName": "BearLink",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BearLink"
    },


    "publish": "never",
    "publishAutoUpdate": false
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^23.6.0"
  }
}
